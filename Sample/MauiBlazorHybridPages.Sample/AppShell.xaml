<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBlazorHybridPages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiBlazorHybridPages.Sample"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate pages:HomePage}"
                  Route="HomePage">
    </ShellContent>

    <ShellContent Title="Counter"
                  ContentTemplate="{DataTemplate pages:CounterPage}"
                  Route="CounterPage">
    </ShellContent>

    <ShellContent Title="Weather"
                  ContentTemplate="{DataTemplate pages:WeatherPage}"
                  Route="WeatherPage">
    </ShellContent>

</Shell>
